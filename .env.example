# =============================================================================
# GODOT TEKKO PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================
# Complete environment configuration for production deployment on Vercel

# =============================================================================
# SANITY CMS CONFIGURATION (REQUIRED)
# =============================================================================
# Get these from your Sanity dashboard: https://sanity.io/
NEXT_PUBLIC_SANITY_PROJECT_ID=your-sanity-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
SANITY_API_READ_TOKEN=your-sanity-read-token

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# MongoDB Atlas connection string (replace with your actual connection)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/godot-tekko?retryWrites=true&w=majority

# =============================================================================
# NEXTAUTH CONFIGURATION (REQUIRED)
# =============================================================================
NEXTAUTH_SECRET=your-super-secret-key-here-minimum-32-characters
NEXTAUTH_URL=https://your-domain.vercel.app

# =============================================================================
# STRIPE CONFIGURATION (REQUIRED FOR PAYMENTS)
# =============================================================================
# Get these from your Stripe dashboard: https://stripe.com/
STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# Set to false for production, true for development
NEXT_PUBLIC_STRIPE_MOCK_MODE=false

# =============================================================================
# EMAIL SERVICE CONFIGURATION (REQUIRED)
# =============================================================================
# Get your API key from: https://resend.com/
RESEND_API_KEY=re_your_resend_api_key

# =============================================================================
# OAUTH PROVIDERS (OPTIONAL)
# =============================================================================
# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional)
GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_USE_MOCK_DATA=false
NEXT_PUBLIC_API_URL=/api

# =============================================================================
# ACCESS PASS PRICING (in cents)
# =============================================================================
ACCESS_PASS_MONTHLY_PRICE=2900
ACCESS_PASS_YEARLY_PRICE=29000
ACCESS_PASS_LIFETIME_PRICE=99900

# =============================================================================
# CDN CONFIGURATION (OPTIONAL - FOR PRODUCTION OPTIMIZATION)
# =============================================================================
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# =============================================================================
# AWS S3 CONFIGURATION (OPTIONAL - FOR FILE STORAGE)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to development for local dev, production for Vercel
NODE_ENV=production

# Development server port
PORT=3000
