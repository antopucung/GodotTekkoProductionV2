# Production Environment Variables for Vercel

# Mock Data Mode - IMPORTANT: Set this to true to use mock data
NEXT_PUBLIC_USE_MOCK_DATA=true

# API Configuration
NEXT_PUBLIC_API_URL=/api

# NextAuth Configuration - REQUIRED for authentication
NEXTAUTH_SECRET=godot-tekko-production-secret-key-2024-change-this-in-production
NEXTAUTH_URL=https://your-app.vercel.app

# Sanity Configuration (Optional - not needed when using mock data)
NEXT_PUBLIC_SANITY_PROJECT_ID=mock-project
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01
SANITY_API_READ_TOKEN=mock-token

# OAuth Providers (Optional - add your real keys for production)
GOOGLE_CLIENT_ID=mock-google-client-id
GOOGLE_CLIENT_SECRET=mock-google-client-secret
GITHUB_ID=mock-github-client-id
GITHUB_SECRET=mock-github-client-secret

# Stripe Configuration (Test Mode)
STRIPE_PUBLISHABLE_KEY=pk_test_mockup_key_for_development
STRIPE_SECRET_KEY=sk_test_mockup_key_for_development
STRIPE_WEBHOOK_SECRET=whsec_mockup_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_mockup_key_for_development

# Enable Stripe Mock Mode for Development
NEXT_PUBLIC_STRIPE_MOCK_MODE=true

# Access Pass Pricing (in cents)
ACCESS_PASS_MONTHLY_PRICE=2900
ACCESS_PASS_YEARLY_PRICE=29000
ACCESS_PASS_LIFETIME_PRICE=99900
